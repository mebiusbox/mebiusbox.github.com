{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "New Blog",
      "type": "shell",
      "command": [
        "Set-ExecutionPolicy -ExecutionPolicy RemoteSigned -Scope Process;",
        ". .vscode/tasks.ps1;",
        "New-BlogPost ${workspaceFolder} ${input:NewName}"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "New Note",
      "type": "shell",
      "command": [
        "Set-ExecutionPolicy -ExecutionPolicy RemoteSigned -Scope Process;",
        ". .vscode/tasks.ps1;",
        "New-Note ${workspaceFolder} ${input:NewName}"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "$PSVersionTable",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    }
  ],
  "inputs": [
    {
      "id": "NewName",
      "type": "promptString",
      "default": "NewFile",
      "description": "New Name"
    }
  ]
}
